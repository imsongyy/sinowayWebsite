            <script>
                //轮播
                $(function(){
                    var tempTimer;
                    function nextTick(now){
                        $(".spc_loop").addClass("disno");
                        $(".carousebar li").removeClass("active");
                        $(".carousebar li").eq(now).addClass("active");
                        $(".spc_loop").eq(now).removeClass("disno");
                        sequenceBounceIn($(".spc_loop").eq(now));
                    }
                    function carouse (now,end,time) {
                        if(now == -1){
                            nextTick(0);
                            now ++;
                        }
                        tempTimer = setInterval(function(){
                            if(now < end){
                                now ++;
                            }else{
                                now = 0;
                            }
                            nextTick(now);
                        },time)
                    }

                    function sequenceBounceIn (ele){
                        $(".borderLeft p").removeClass("animated bounceInLeft")
                        ele.find('img').addClass("animated bounceInLeft");
                        for(var i=0; i<ele.find($(".borderLeft p")).length;i++){
                            ele.find($(".borderLeft p")).eq(i).css({animationDelay : 0.5 + i*0.05 + "s"})
                            ele.find($(".borderLeft p")).addClass("animated bounceInRight")
                        }
                    }
                    $(".carousebar li").click(function(){
                        var index = $(".carousebar li").index(this);
                        nextTick(index);

                    })
                    $(".carousebar li").mouseover(function(){
                        clearTimeout(tempTimer);
                    }).mouseout(function(){
                        var index = $(".carousebar li").index(this);
						carouse(index,4,4000);
                    })
                    $(".spc_loop ").mouseover(function(){
                        clearTimeout(tempTimer);
                        var index = $(".spc_loop").index(this);
                        nextTick(index);

                    }).mouseout(function(){
                        var index = $(".spc_loop ").index(this);
						carouse(index,4,4000);
                    })

					carouse(-1,4,4000);

                })

